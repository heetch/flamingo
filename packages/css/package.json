{
  "name": "@heetch/flamingo-css",
  "version": "1.0.0-alpha.5",
  "description": "",
  "author": "ugogo",
  "license": "MIT",
  "repository": "https://github.com/heetch/flamingo",
  "main": "./dist/index.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "postcss src/index.css -o dist/index.css -w",
    "build": "postcss src/index.css -o dist/index.css",
    "prepare": "npm run build",
    "prettier": "prettier --write 'src/**/*.css'"
  },
  "devDependencies": {
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "postcss": "^7.0.18",
    "postcss-cli": "^6.1.3",
    "postcss-easy-import": "^3.0.0",
    "prettier": "^1.18.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
